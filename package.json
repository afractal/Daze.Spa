{
    "name": "daze.spa",
    "version": "1.0.0",
    "author": "afractal",
    "private": true,
    "license": "MIT",
    "scripts": {
        "build-css": "node-sass-chokidar ./src --include-path ./node_modules src/ -o src/",
        "watch-css": "npm run build-css && node-sass-chokidar ./src --include-path ./node_modules src/ -o src/ --watch --recursive",
        "setup": "node ./setup",
        "start-js": "react-scripts start",
        "start": "npm-run-all -p setup watch-css start-js",
        "build-js": "react-scripts build",
        "build": "npm-run-all setup build-css build-js",
        "test": "npm run setup && react-scripts test --env=jsdom",
        "test:watch": "npm run setup && react-scripts test --env=jsdom --watchAll",
        "test:coverage": "npm test -- --coverage",
        "test:debug": "react-script --inspect-brk test --runInBand --env=jsdom",
        "eject": "react-scripts eject",
        "relay": "relay-compiler --src ./src --schema ./data/schema.graphql"
    },
    "dependencies": {
        "react": "^16.2.0",
        "react-dom": "^16.2.0",
        "react-scripts": "1.1.1",
        "compression": "^1.7.2",
        "express": "^4.16.2",
        "font-awesome": "^4.7.0",
        "isomorphic-fetch": "^2.2.1",
        "node-sass-chokidar": "^0.0.3",
        "npm-run-all": "^4.1.2",
        "nprogress": "^0.2.0",
        "react-redux": "^5.0.7",
        "react-router-dom": "^4.2.2"
    },
    "devDependencies": {
        "@types/enzyme": "^3.1.9",
        "@types/isomorphic-fetch": "^0.0.34",
        "@types/jest": "^22.1.4",
        "@types/node": "^9.4.6",
        "@types/react": "^16.0.40",
        "@types/react-dom": "^16.0.4",
        "@types/react-relay": "^1.3.4",
        "@types/react-router-dom": "^4.2.4",
        "@types/sinon": "^4.3.0",
        "babel-plugin-relay": "^1.5.0",
        "babel-preset-react-app": "^3.1.1",
        "codeclimate-test-reporter": "^0.5.0",
        "enzyme": "^3.3.0",
        "enzyme-adapter-react-16": "^1.1.1",
        "react-test-renderer": "^16.2.0",
        "relay-compiler": "^1.5.0",
        "sinon": "^4.4.2"
    }
}
