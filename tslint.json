{
    "extends": [
        "tslint-react"
    ],
    "rules": {
        "align": [
            true,
            "parameters",
            "statements"
        ],
        "ban": false,
        "class-name": true,
        "comment-format": [
            true,
            "check-space"
        ],
        "curly": false,
        "eofline": false,
        "forin": true,
        "indent": [
            true,
            "spaces"
        ],
        "interface-name": [
            true,
            "never-prefix"
        ],
        "jsdoc-format": true,
        "jsx-no-lambda": false,
        "jsx-no-multiline-js": false,
        "jsx-wrap-multiline": false,
        "jsx-alignment": false,
        "label-position": true,
        "max-line-length": false,
        "member-ordering": false,
        "no-any": false,
        "no-arg": true,
        "no-bitwise": true,
        "no-console": [
            true,
            "error",
            "debug",
            "time",
            "timeEnd",
            "trace"
        ],
        "no-consecutive-blank-lines": false,
        "no-construct": true,
        "no-debugger": true,
        "no-duplicate-variable": true,
        "no-empty": false,
        "no-eval": true,
        "no-shadowed-variable": true,
        "no-string-literal": false,
        "no-switch-case-fall-through": true,
        "no-trailing-whitespace": false,
        "no-unused-expression": true,
        "no-use-before-declare": false,
        "no-unused-variable": false,
        "radix": true,
        "semicolon": [
            false,
            "always"
        ],
        "switch-default": true,
        "trailing-comma": [
            false
        ],
        "triple-equals": [
            true,
            "allow-null-check"
        ],
        "typedef": [
            true,
            "parameter",
            "property-declaration"
        ],
        "variable-name": [
            true,
            "ban-keywords",
            "check-format",
            "allow-leading-underscore",
            "allow-pascal-case"
        ]
    }
}